<h3>Add New Journey</h3>
<br>

<%= form_tag '/journeys', method: :post do %>

  <%= label_tag :user_id %>
  <%= text_field_tag :user_id %><br>

  <%= label_tag :place %>
  <%= text_field_tag :place %><br>

  <div class="row">
    <div class="col s6 m6 l6">
      <%= label_tag :startdate, 'Start Date' %>
      <input type="date" class="datepicker" id="startdate" name="startdate">
    </div>
    <div class="col s6 m6 l6">
      <%= label_tag :enddate, 'End Date' %>
      <input type="date" class="datepicker" id="enddate" name="enddate">
    </div>
  </div>

  <div class="switch">
    <label>
      Private
      <input type="checkbox" id="public" name="public" value="false">
      <span class="lever"></span>
      Public
    </label>
  </div>
  <br>

  <%= submit_tag 'Submit', class: 'btn' %>

<% end %>