<h1><%= @journey.place %></h1>

Date: <%= @journey.startdate %> - <%= @journey.enddate %> <br>

<%= link_to 'Edit Journey', "/journeys/#{@journey.id}/edit" %>

<h2>Days</h2>

<% @days.each do |day| %>
  <p>Day <%= day.daynumber %>: <%= link_to "#{day.location}", "/days/#{day.id}" %></p>
<% end %>

<h2>Add Day</h2>

<%= form_tag '/days', method: :post do %>

  <%= label_tag 'Day number' %>
  <%= text_field_tag :daynumber %><br>

  <%= label_tag :location %>
  <%= text_field_tag :location, 'Where did you go?' %><br>

  <%= label_tag :public %>
  <%= text_field_tag :public, 'true or false' %><br>

  <%= hidden_field_tag :journey_id, @journey.id %>

  <%= submit_tag 'Submit' %>

<% end %>