<h3><%= @journey.place %></h3>

<%= @journey.startdate.strftime('%B %e, %Y') %> - <%= @journey.enddate.strftime('%B %e, %Y') %> <br>

<%= link_to 'Edit Journey', "/journeys/#{@journey.id}/edit" %> <br>

<br>

<h4>Days</h4>

<% @days.each do |day| %>
  <p>Day <%= day.daynumber %>: <%= link_to "#{day.location}", "/days/#{day.id}" %></p>
<% end %>

<br>

<h5>Add Day</h5>

<%= form_tag '/days', method: :post do %>

  <%= label_tag :daynumber, 'Day Number' %>
  <%= text_field_tag :daynumber, @days.count + 1 %><br>

  <%= label_tag :location %>
  <%= text_field_tag :location, 'Where did you go?' %><br>

  <% if @journey.public %>
    <%= label_tag :public %>
    <%= check_box_tag :public, nil, true %><br>
  <% end %>

  <div class="switch">
    <label>
      Private
      <input type="checkbox" id="public" name="public" value="true">
      <span class="lever"></span>
      Public
    </label>
  </div>
  <br>

  <%= hidden_field_tag :journey_id, @journey.id %>

  <%= submit_tag 'Submit', class: 'btn' %>

<% end %>

<br>